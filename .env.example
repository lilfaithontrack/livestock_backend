# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ethio_livestock_db
DB_USER=root
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# OTP Configuration
OTP_EXPIRE_MINUTES=10

# SMS Gateway (Ethiopian Telecom APIs)
SMS_API_KEY=your_telebirr_or_mbirr_api_key
SMS_API_URL=https://api.telebirr.com/sms

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Chapa Payment Gateway
# Get your credentials at https://chapa.co
CHAPA_SECRET_KEY=your_chapa_secret_key_here
CHAPA_PUBLIC_KEY=your_chapa_public_key_here

# Telebirr Payment Gateway
# Apply through Ethio Telecom for merchant credentials
TELEBIRR_APP_ID=your_telebirr_app_id_here
TELEBIRR_APP_KEY=your_telebirr_app_key_here
TELEBIRR_SHORT_CODE=your_telebirr_short_code_here
TELEBIRR_PUBLIC_KEY=your_telebirr_public_key_here

# Payment Callback Base URL (your backend URL)
PAYMENT_CALLBACK_BASE_URL=http://localhost:5000/api/v1

# Frontend URL (for redirects after payment)
FRONTEND_URL=http://localhost:3000

